@model Adressbook.Models.ViewModels.ContactViewModel
@{
    ViewBag.Title = "Yeni Kişi Ekle";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("AddContact", "Dashboard", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary(true, "Lütfen aşağıdaki hataları düzeltiniz.")
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Surname)
        @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Surname)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AddressText)
        @Html.TextAreaFor(m => m.AddressText, new { @class = "form-control" , @rows = 5})
        @Html.ValidationMessageFor(m => m.AddressText)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AddressCity)
        @Html.TextBoxFor(m => m.AddressCity, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.AddressCity)

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AddressPhone)
        @Html.TextBoxFor(m => m.AddressPhone, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.AddressPhone)

    </div>
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Ekle</button>}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")  
}
